<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background"
    tools:context=".SplashActivity">

    <TextView
        android:id="@+id/splash_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/splash_image"
        android:layout_marginBottom="20dp"
        android:text="Range counter"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="26dp" />

    <ImageView
        android:id="@+id/splash_image"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_centerInParent="true"
        android:src="@drawable/shooting_range" />

    <TextView
        android:id="@+id/splash_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splash_image"
        android:layout_marginTop="10dp"
        android:hint="Remember to shoot wisely and remember \n Safty first! "
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22dp" />
</RelativeLayout>